<ol class="post-list">
   {{#each posts as |post|}}
    <article class="post">
      <div class="title">
        <a href="/post/{{id}}">{{title}}</h1>
      </div>
      <div class="meta">
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comments</a>
      </div>    
    </article>
  {{/each}}
</ol>