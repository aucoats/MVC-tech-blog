<ol class="post-list">
   {{#each posts as |post|}}
    <article class="post">
      <div class="title">
        <a href="/post/{{id}}"><h1>{{title}}</h1></a>
      </div>
      <div class="content">
          {{content}}
      </div> 
      <div class="meta">
        {{format_date created_at}}
      </div>    
    </article>
  {{/each}}
</ol>